<%= form_with model: album do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :artist %>
    <%= form.text_field :artist %>
  </div>
  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.rich_text_area :summary %>
  </div>
  <div>
    <%= form.label :cover, style: "display: block" %>
    <%= form.file_field :cover, accept: "image/*" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>